<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dev.nehal.insane"
    tools:ignore="GoogleAppIndexingWarning">

    <!-- 인터넷 퍼미션 설정값 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 스토리지 접근 권한 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:name=".shared.InsaneApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".shared.SplashActivity"
            android:theme="@style/SplashTheme"/>
        <activity android:name=".modules.MainActivity" />

        <activity
            android:name=".modules.MainActivityDelete"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".modules.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="dev.nehal.insane.navigation.AddPhotoActivity" />
        <activity android:name="dev.nehal.insane.navigation.CommentActivity"/>

        <!--안드로이드 8.0이상 푸시 처리 추가 코드-->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/push_icon" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

    </application>

</manifest>