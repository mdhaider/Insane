<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dev.nehal.insane"
    tools:ignore="GoogleAppIndexingWarning">

    <application
        android:name=".shared.InsaneApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".shared.SplashActivity"
            android:theme="@style/SplashTheme"/>
        <activity android:name=".modules.MainActivityOld" />
        <activity
            android:name=".modules.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".modules.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>